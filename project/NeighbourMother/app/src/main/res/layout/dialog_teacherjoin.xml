<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal">
    <!--/home/quliang/桌面/v1.2.1/img_apply_caption.png-->
    <!--/home/quliang/桌面/v1.2.1/img_apply_teacher.png-->
    <!--</LinearLayout>-->
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tag2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:background="@mipmap/img_apply_bg"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="@string/teacherjoin_d_name_tag"

            android:textColor="@color/app_item_content"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/login_input_backgroud"
            android:maxLength="10"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tel_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/teacherjoin_d_tel_tag"
            android:textColor="@color/app_item_content"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/login_input_backgroud"
            android:digits="0123456879"
            android:inputType="number"
            android:maxLength="11"
            android:numeric="integer"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/teacherjoin_d_label"
            android:textColor="@color/app_item_content"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/teacher_join_btn_backgroud"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="6dp"
            android:text="@string/teacherjoin_d_sure"
            android:textColor="@color/white"
            android:textSize="@dimen/app_item_title" />
    </LinearLayout>


    <ImageView
        android:id="@+id/tag2"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/img_apply_teacher" />

    <ImageView
        android:id="@+id/tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:src="@mipmap/img_apply_caption" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/ll"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="-10dp"
        android:src="@mipmap/icon_apply_closebtn" />

</RelativeLayout>