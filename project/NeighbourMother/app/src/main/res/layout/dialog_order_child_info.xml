<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_susseed" />

    <TextView
        style="@style/black_text_style"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=" 温馨提示！" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="由于您是第一次下单，请立即前往个人中心补全孩子的详细信息，否则将无法生成订单"
        android:textColor="@color/app_item_content"
        android:textSize="14sp"
        android:visibility="visible" />

    <!--<View-->
        <!--style="@style/app_item_line_style"-->
        <!--android:layout_width="240dp"-->
        <!--android:layout_marginTop="25dp" />-->

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_left_right_size"
        android:layout_marginRight="@dimen/app_left_right_size"
        android:gravity="center"
        android:padding="15dp">


        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_order_child_info_backgroud"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="8dp"
            android:text="立即前往"
            android:textColor="@color/white"
            android:textSize="@dimen/app_item_title" />

    </LinearLayout>

</LinearLayout>