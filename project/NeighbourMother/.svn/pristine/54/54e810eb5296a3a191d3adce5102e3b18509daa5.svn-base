<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/center_top_backgroud">

        <RelativeLayout
            android:id="@+id/rela_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_title_height">

            <ImageView
                android:id="@+id/back"
                style="@style/app_title_icon_style"
                android:layout_centerVertical="true"
                android:longClickable="false"
                android:src="@mipmap/back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/title"
                style="@style/app_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/back"
                android:layout_toLeftOf="@+id/send_post"
                android:layout_toRightOf="@+id/back"
                android:layout_toStartOf="@+id/send_post"
                android:gravity="center"
                android:text="社区" />

            <TextView
                android:id="@+id/org_edit"
                style="@style/app_title_icon_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_backicon_margin_left"
                android:gravity="center"
                android:longClickable="false"
                android:padding="@dimen/dimen_backicon_padding_left"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/send_post"
                style="@style/app_title_icon_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:longClickable="false"
                android:src="@mipmap/icon_orders_pressed"
                android:visibility="invisible" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_top"
        android:layout_marginLeft="@dimen/app_left_right_size"
        android:layout_marginRight="@dimen/app_left_right_size"
        android:layout_marginTop="-40dp"
        android:orientation="horizontal">

        <com.qiantang.neighbourmother.widget.CircleImageView
            android:id="@+id/header_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/center_top_backgroud"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <ImageView
            android:id="@+id/is_star"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/header_image"
            android:layout_alignLeft="@+id/header_image"
            android:layout_alignRight="@+id/header_image"
            android:background="#000" />

        <TextView
            android:id="@+id/fcous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/header_image"
            android:layout_alignParentRight="true"
            android:background="@drawable/personal_header_focus_backgroud"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_left_right_size"
        android:layout_marginRight="@dimen/app_left_right_size"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/personal_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="158****77987"
            android:textColor="@color/app_item_title"
            android:textSize="@dimen/app_item_title" />

        <ImageView
            android:id="@+id/personal_head_sex"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/personal_head_name"
            android:src="@drawable/center_sex_selector" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_left_right_size"
        android:layout_marginRight="@dimen/app_left_right_size"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_alipay" />

        <TextView
            android:id="@+id/conmmunity_focus"
            style="@style/app_item_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="关注"
            android:textColor="@color/app_item_content"
            android:textSize="15sp" />

        <View
            android:layout_width="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="match_parent"
            android:background="@color/app_line" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_alipay" />

        <TextView
            android:id="@+id/fans_num"
            style="@style/app_item_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="粉丝"
            android:textColor="@color/app_item_content"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/post_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/app_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/app_left_right_size"
        android:paddingTop="5dp"
        android:text="TA的帖子(10)"
        android:textColor="@color/app_item_content"
        android:textSize="14sp" />
</LinearLayout>