<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/addmoney_addmoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textColor="@color/app_special_style_color_normal"
            android:textSize="18sp"
            android:layout_marginRight="5dp"
            android:text="ï¿¥:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:digits="123456789"
            android:id="@+id/money"
            android:textSize="18sp"
            android:textColor="@color/app_special_style_color_normal"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <TextView
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/addmoney_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reason"
        android:gravity="left|top"
        android:textSize="18sp"
        android:textColor="@color/app_item_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingLeft="25dp"
        android:paddingTop="12dp"
        android:paddingRight="25dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
    android:background="@drawable/login_btn_rect_backgroud"
        android:text="@string/addmoney_now_pay"
        android:textColor="@color/white"
        android:textSize="@dimen/app_item_title" />

    <!--android:background="@drawable/login_btn_backgroud"-->
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="25dp" />-->
</LinearLayout>