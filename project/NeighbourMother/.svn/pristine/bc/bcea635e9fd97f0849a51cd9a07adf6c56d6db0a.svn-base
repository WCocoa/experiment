<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conmmunity_title"
            style="@style/app_item_title_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_left_right_size"
            android:layout_marginRight="@dimen/app_left_right_size"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="大张伟曝某艺人为上头条花钱找骂：特别可悲" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/app_left_right_size"
            android:layout_marginRight="@dimen/app_left_right_size"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/icon_alipay" />

            <TextView
                android:id="@+id/conmmunity_tag"
                style="@style/app_item_content_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="出国 ， 英语" />
        </LinearLayout>

        <ImageView
            android:id="@+id/conmmunity_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_left_right_size"
            android:layout_marginRight="@dimen/app_left_right_size"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/center_top_backgroud" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_left_right_size"
            android:layout_marginRight="@dimen/app_left_right_size"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ll_conmmunity_focus"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rl_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.qiantang.neighbourmother.widget.CircleImageView
                        android:id="@+id/head_image_list"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@mipmap/center_top_backgroud" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            style="@style/app_item_content_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="呵呵哒" />

                        <TextView
                            android:id="@+id/conmmunity_time"
                            style="@style/app_item_content_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="刚刚" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_conmmunity_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/app_left_right_size"
                android:layout_marginRight="@dimen/app_left_right_size"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/icon_alipay" />

                <TextView
                    android:id="@+id/conmmunity_focus"
                    style="@style/app_item_content_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:text="999" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/icon_alipay" />

                <TextView
                    android:id="@+id/comment_num"
                    style="@style/app_item_content_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="999" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/app_bg" />
</LinearLayout>