<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/app_bg"
    android:layout_height="fill_parent" >
    <!--<TextView-->
        <!--android:id="@+id/bg"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp"-->
        <!--android:background="@mipmap/img_send_default"-->
        <!--/>-->

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/delete"
            android:clickable="false"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@null"
            android:src="@mipmap/icon_btn_close" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/img_send_default"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_soc_close"
            />
        <EditText
            android:background="@android:color/transparent"
            android:id="@+id/title"
            android:maxLength="15"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="@string/sposter_add_title"
            android:layout_alignBottom="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>






    <EditText
        android:background="@color/white"
        android:textColor="@color/app_item_content"
        android:layout_below="@+id/rela"
        android:id="@+id/content"
        android:lines="3"
        android:padding="10dp"
        android:textSize="14sp"
        android:gravity="left"
        android:hint="@string/sposter_input_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<TextView
    android:id="@+id/delete_item"
    android:padding="8dp"
    android:gravity="center"
    android:background="@color/white"
    android:layout_marginTop="1dp"
    android:layout_below="@+id/content"
    android:text="@string/sposter_delete_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

</RelativeLayout>