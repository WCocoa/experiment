<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rela_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_title_height"
        android:background="@color/app_title_bg" >

        <ImageView
            android:id="@+id/back"
            style="@style/app_title_icon_style"
            android:layout_centerVertical="true"
            android:longClickable="false"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/title"
            style="@style/app_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
         android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/sposter_title" />

    </RelativeLayout>
<ListView
    android:dividerHeight="10dp"
    android:divider="@color/app_bg"
    android:layout_below="@+id/rela_top"
    android:layout_above="@+id/btm_linear"
    android:id="@+id/listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></ListView>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/btm_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:background="@color/app_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    <LinearLayout
        android:background="@color/white"
android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        >



        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/add_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
<ImageView
    android:layout_width="@dimen/sposter_btm_wh"
    android:layout_height="@dimen/sposter_btm_wh"
    android:src="@mipmap/ic_launcher"
    />
            <TextView
                android:text="@string/sposter_add_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/add_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/sposter_btm_wh"
                android:layout_height="@dimen/sposter_btm_wh"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:text="@string/sposter_add_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/send_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/login_btn_backgroud"
                android:text="@string/sposter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>